                        },
                        "example": [
                            1,
                            2,
                            3
                        ]
                    }
                },
                "type": "object"
            },
            "ProductResource": {
                "title": "Product Resource",
                "description": "Product resource representation",
                "properties": {
                    "data": {
                        "properties": {
                            "id": {
                                "type": "integer",
                                "example": 1
                            },
                            "name": {
                                "type": "string",
                                "example": "laptop"
                            },
                            "description": {
                                "type": "string",
                                "example": "A high-quality laptop",
                                "nullable": true
                            },
                            "price": {
                                "type": "integer",
                                "example": 1500000
                            },
                            "categories": {
                                "description": "Array of category IDs associated with the product",
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/CategoryResponse"
                                },
                                "example": [
                                    1,
                                    2,
                                    3
                                ]
                            },
                            "created_at": {
                                "type": "string",
                                "format": "date-time",
                                "example": "2025-10-20 14:30:00"
                            },
                            "updated_at": {
                                "type": "string",
                                "format": "date-time",
                                "example": "2025-10-20 14:30:00"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "LoginData": {
